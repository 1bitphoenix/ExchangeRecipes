<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rituka.uploadrecipe.activities.SignUpActivity"
    android:background="@drawable/backg">

    <TextView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:fontFamily="cursive"
        android:text="Traditional Food India"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic"/>
    <!--android:textColor="9370db"-->


    <EditText
        android:id="@+id/name_signup"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Name"
        android:inputType="text"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"

        android:textStyle="italic"/>
    <!--android:textColorHint="9370db"-->

    <EditText
        android:id="@+id/email_signup"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Email_Id"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/name_signup"
        android:layout_alignLeft="@+id/name_signup"
        android:layout_alignStart="@+id/name_signup"

        android:textStyle="italic"/>
    <!--android:textColorHint="9370db"-->
    <EditText
        android:id="@+id/password_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_below="@+id/email_signup"
        android:layout_alignLeft="@+id/email_signup"
        android:layout_alignStart="@+id/email_signup"

        android:textStyle="italic"/>
    <!--android:textColorHint="9370db"-->

    <EditText
        android:id="@+id/phone_no"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:layout_below="@+id/password_password"
        android:layout_alignLeft="@+id/password_password"
        android:layout_alignStart="@+id/password_password"

        android:textStyle="italic"/>
    <!--android:textColorHint="9370db"-->
    <Button
        android:id="@+id/signup"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="signup"
        android:layout_below="@+id/phone_no"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/signin_again"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:text="Log In"
        android:textAlignment="center"
        android:layout_below="@+id/signup"
        android:layout_centerHorizontal="true"

        android:textStyle="italic"/>
    <!--android:textColor="9370db"-->
</RelativeLayout>