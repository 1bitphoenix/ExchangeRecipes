<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_card"
    android:layout_margin="8dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/cartDishName"
            android:layout_width="270dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:hint="Dish Name "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_state"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_below="@+id/cartDishName"
            android:layout_marginTop="10dp"
            android:hint="State Name" />


        <TextView
            android:id="@+id/price_food"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:hint="Price"
            android:layout_toRightOf="@+id/cartDishName"
            />
        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:background="@drawable/addtocart"
            android:layout_marginTop="10dp"
            android:id="@+id/add_item_to_cart"
            android:layout_below="@+id/price_food"
            android:layout_toRightOf="@+id/cart_state"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>