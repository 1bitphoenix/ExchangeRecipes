<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rituka.uploadrecipe.activities.ForgotPasswordActivity"
    android:background="@drawable/backg">

    <TextView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:fontFamily="cursive"
        android:text="Traditional Food India"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic"/>
        <!--android:textColor="9370db"-->


    <EditText
        android:id="@+id/email_signup"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:textStyle="italic"/>
    <!--android:textColorHint="9370db"-->


    <EditText
        android:id="@+id/phone_no"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:layout_below="@+id/email_signup"
        android:layout_alignLeft="@+id/email_signup"
        android:layout_alignStart="@+id/email_signup"
        android:textStyle="italic"/>
    <!--android:textColorHint="9370db"-->


    <EditText
        android:id="@+id/password_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:hint="Enter New Password"
        android:inputType="textPassword"
        android:layout_below="@+id/phone_no"
        android:layout_alignLeft="@+id/phone_no"
        android:layout_alignStart="@+id/phone_no"
        android:textStyle="italic"/>
    <!--android:textColorHint="9370db"-->


    <Button
        android:id="@+id/reset"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="reset password"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/signin_again"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/reset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:text="Log In"
        android:textColor="#000000"
        android:textStyle="italic"/>



</RelativeLayout>